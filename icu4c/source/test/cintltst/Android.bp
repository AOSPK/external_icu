cc_defaults {
    name: "cintltst_defaults",
    defaults: ["icu_test_defaults"],
    srcs: [
        "**/*.c",
        "**/*.cpp",
    ],
    cflags: [
        "-DANDROID_LINK_SHARED_ICU4C",
        // Force the test to use the data file on
        "-DANDROID_USE_ICU_REG",
        // Disable some file IO tests to workaround test crashing due to missing data files.
        "-DUCONFIG_NO_FILE_IO",
        "-DZERO_EXIT_CODE_FOR_FAILURES",
    ],
    exclude_srcs: [
        // Not built directly, but #included from other sources.
        "usrchdat.c",
    ],
}

cc_test {
    name: "cintltst32",
    defaults: ["cintltst_defaults"],
    // Workaround Soong's limitation that java_test_host data property can only include
    // dependencies with a single variant
    compile_multilib: "32",
}

cc_test {
    name: "cintltst64",
    defaults: ["cintltst_defaults"],
    multilib: {
        // On 32-bit platform, this binary is compiled, but not used.
        lib32: {
            suffix: "_fake",
        },
    },
    // Workaround Soong's limitation that java_test_host data property can only include
    // dependencies with a single variant
    compile_multilib: "first",
}
